<% @user ||= current_user %>
<!-- homeアクションとuserのshowアクションから呼び出される２通りある。homeアクションでは@userは定義していない。 -->
<!-- home.html.erbでは自分のstatsしか表示されない。ので@userは常にcurrent_user(自分)になる。 -->
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>
